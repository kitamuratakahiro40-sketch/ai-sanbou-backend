generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Models ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  plan          UserPlan  @default(FREE) // ★Enum管理に変更
  gammaCount    Int       @default(0)    // 月間生成数制限用
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // リレーション
  jobs          Job[]
  projects      Project[]
  
  // NextAuth用リレーション
  accounts      Account[]
  sessions      Session[]
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  contextData String?  @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id])

  jobs        Job[]
}

model Job {
  id            String   @id @default(uuid())
  
  // ★重要: Userとの紐付けを復活（既存データ保護のため任意項目 '?' に設定）
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])

  // Projectとの紐付けは、まだ任意でOK
  projectId     String?
  project       Project? @relation(fields: [projectId], references: [id])

  // --- Metadata ---
  tags          String?
  clientName    String?
  projectName   String?
  
  // --- Settings ---
  type          JobType      @default(AUDIO)
  status        JobStatus    @default(UPLOADED)
  security      SecurityMode @default(CONFIDENTIAL)

  // --- Input ---
  sourceUrl     String?
  rawText       String?  @db.Text
  fileName      String?

  // --- Outputs ---
  transcript    String?  @db.Text
  narrative     String?  @db.Text
  shieldOutput  String?  @db.Text
  spearOutput   Json?
  
  // --- New Features ---
  pptOutput     String?  @db.Text // PPT下書き
  metrics       Json?             // 感情分析
  speakerMap    Json?             // 話者名マッピング
  translation  String?  @db.Text
  
  // --- Others ---
  slideUrl      String?
  errorMessage  String?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- NextAuth Models (Googleログインに必須) ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Enums ---

enum JobType {
  AUDIO
  VIDEO
  TEXT
}

enum JobStatus {
  UPLOADED
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
}

enum SecurityMode {
  CONFIDENTIAL
  ANONYMOUS
}

enum UserPlan {
  FREE
  PRO
  ADMIN
}
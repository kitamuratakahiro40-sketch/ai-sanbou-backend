{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    
    // ✅ パスエイリアスの基準点 (プロジェクトルート)
    "baseUrl": ".", 
    
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // ✅ @/auth や @/components を解決するために必要
      "@/*": ["./src/*"], 
      
      // ✅ @/lib/prisma を解決するために必要
      "@/lib/*": ["./src/lib/*"] 
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "src/types/**/*.d.ts"
, "next.config.mjs"  ],
  "exclude": [
    "node_modules"
  ]
}
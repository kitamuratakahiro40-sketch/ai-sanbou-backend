// 【親】プロジェクトルートの tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",             // インポートの基点をここ（ルート）にする
    "paths": {
      "src/*": ["src/*"]         // 'src/...'で始まるインポートをルートのsrcフォルダにマッピング
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
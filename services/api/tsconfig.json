{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2019"
    ],
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*"
  ]
}
